{{!-- Script to get and set theme ASAP to prevent flashing between page loads --}}
<script type="text/javascript">
  function getCookie(cname) { // https://www.w3schools.com/js/js_cookies.asp
    let name = cname + "=";
    let ca = document.cookie.split(';');
    for(let i = 0; i < ca.length; i++) {
      let c = ca[i];
      while (c.charAt(0) == ' ') {
        c = c.substring(1);
      }
      if (c.indexOf(name) == 0) {
        return c.substring(name.length, c.length);
      }
    }
    return "";
  }

// Apply theme based on the cookie value or system preference
  let theme = getCookie('uniswap-ui-theme');

  if (theme === 'dark' || (!theme && window.matchMedia("(prefers-color-scheme: dark)").matches)) {
    document.documentElement.classList.add('dark');
  }
</script>
