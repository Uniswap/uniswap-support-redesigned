<script>
  (function() {
    // Initialize ThemeManager with cookie handling
    class ThemeManager {
      static getTheme() {
        return Cookies.get('uniswap-ui-theme');
      }

      static setTheme(theme) {
        Cookies.set('uniswap-ui-theme', theme, { expires: 365, domain: 'zendesk.com' });
      }
    }

    // Apply the theme based on the saved cookie value or system preference
    const theme = ThemeManager.getTheme();

    if (theme === 'dark' || (!theme && window.matchMedia("(prefers-color-scheme: dark)").matches)) {
      document.documentElement.classList.add("dark");
    } else {
      document.documentElement.classList.remove("dark");
    }
  })();
</script>
